<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300"
             x:Class="NAudioAvaloniaDemo.WaveInSdlDemo.RecordingsView">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="209*"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>
		<ListBox Margin="6" ItemsSource="{Binding Recordings}" SelectedItem="{Binding SelectedRecording, Mode=TwoWay}"></ListBox>
		<StackPanel Orientation="Vertical" Grid.Column="1">
			<Button Content="Play" Command="{Binding PlayCommand}" HorizontalAlignment="Left" Margin="6" VerticalAlignment="Top" Width="100"/>
			<Button Content="Delete" Command="{Binding DeleteCommand}" HorizontalAlignment="Left" Margin="6" VerticalAlignment="Top" Width="100"/>
			<Button Content="Open Folder" Command="{Binding OpenFolderCommand}" HorizontalAlignment="Left" Margin="6" VerticalAlignment="Top" Width="100"/>
		</StackPanel>


	</Grid>
</UserControl>
